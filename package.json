{
  "name": "eia-overlay",
  "version": "0.0.2",
  "scripts": {
    "build:dashboard": "parcel build ./src/dashboard/build/*.pug --public-url ./ -d dashboard",
    "build:graphics": "parcel build ./src/graphics/*/build/*.pug --public-url ./ -d graphics",
    "build": "concurrently \"npm run build:dashboard\" \"npm run build:graphics\"",

    "dev:dashboard": "parcel watch ./src/dashboard/build/*.pug --public-url ./ -d dashboard",
    "dev:graphics": "parcel watch ./src/graphics/*/build/*.pug --public-url ./ -d graphics",
    "dev": "npm-run-all --parallel dev:dashboard dev:graphics",
    "lint": "eslint ."
  },
  "nodecg": {
    "compatibleRange": ">=0.9",
    "assetCategories": [
      {
        "name": "djlogos",
        "title": "DJ Logos",
        "allowedTypes": [
          "jpg",
          "png",
          "webm",
          "jpeg",
          "gif"
        ]
      }
    ],
    "dashboardPanels": [
      {
        "name": "global",
        "title": "Global",
        "file": "global.html",
        "width": 6,
        "headerColor": "#0ea013"
      },
      {
        "name": "for-graphic-a",
        "title": "For Graphic A",
        "file": "for-graphic-a.html",
        "width": 3,
        "headerColor": "#3ec46d"
      },
      {
        "name": "for-graphic-b",
        "title": "For Graphic B",
        "file": "for-graphic-b.html",
        "width": 3,
        "headerColor": "#3ec46d"
      }
    ],
    "graphics": [
      {
        "file": "parrotfest-a.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "parrotfest-b.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "bulma": "^0.9.2",
    "concurrently": "^6.0.1",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "marquee3000": "^1.1.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-nuke-dist": "^1.0.1",
    "pug": "^3.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sass": "^1.32.8",
    "typescript": "^4.2.2"
  },
  "dependencies": {}
}
